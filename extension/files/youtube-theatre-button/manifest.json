{
	"manifest_version": 2,

	"name": "YouTube theatre button",
	"description": "Theatre button just like on twitch.com",
	"version": "1.20",

	"browser_action": {
		"default_icon": {
			"19": "img/icon.png",
			"38": "img/icon38.png"
        }
	},

	"icons": {
		"48": "img/icon48.png"
	},

	"permissions": ["windows", "activeTab", "tabs", "storage", "https://*.youtube.com/*", "http://*.youtube.com/*"],

	"background": {
		"persistent": true,
		"scripts": ["js/background.js"]
	},

	"options_ui": {
		"page": "options.html",
		"chrome_style": true,
		"open_in_tab": true
	}
}
